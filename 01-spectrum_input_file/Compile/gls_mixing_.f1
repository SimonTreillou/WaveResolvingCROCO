     &                     -dt*cff*pm(i,j)*pn(i,j)
     &                       *(  ustar_sfc_sq(i+1,j)-ustar_sfc_sq(i,j)
     &                         + ustar_bot_sq(i,j+1)-ustar_bot_sq(i,j) )
          ENDDO
